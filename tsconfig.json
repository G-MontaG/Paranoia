{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "removeComments": true,
    "noImplicitAny": false,
    "declaration": false,
    "outDir": "build",
    "pretty": true
  },
  "exclude": [
    "node_modules",
    "typings/main",
    "typings/main.d.ts",
    "view"
  ],
  "compileOnSave": true,
  "buildOnSave": true
}